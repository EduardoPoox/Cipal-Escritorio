        private void btnregistrar_Click(object sender, EventArgs e)
        {
            try
            {
                int id = 0; //REGISTRO NUEVO
                frmregistroingreso ofrmingreso = new frmregistroingreso(id, this._idusuario, this._connexionstring);
                ofrmingreso.ShowDialog();
